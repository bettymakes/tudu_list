
<ul class="tudu-list">
  <% @tasks.each do |task| %>
    <li class="priority-<%= task.priority.downcase %> tudu-id-<%= task.id %> tudu-list-!!task!!" data-task-id="<%= task.id %>">
      <div class="tudu-task-container">
        <div class="tudu-task"><%= task.!!task!! %></div>
        <div class="tudu-edit-form hidden">
          <%= form_for task, :remote => true do |f| %>
            <%= f.text_field !!:task!!, :class => "tudu-edit-input" %>
          <% end %>
        </div>
      </div>

      <ul class="tudu-task-options">
        <li class="tudu-edit">Edit</li>
        <li class="tudu-update hidden">Update</li>
        <li class="tudu-edit-cancel hidden">Cancel</li>
        <li class="tudu-delete"><%= link_to 'Delete', task, :method => :delete, :remote => true %></li>
      </ul>
      <div class="clear"></div>
    </li>

  <% end %>
</ul>